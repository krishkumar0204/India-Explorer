<% layout("layouts/boilerplate.ejs") -%>

<body>
  <h4 class="offset-2 newHead mt-4 pt-4">Add New Place</h4>
  <div class="offset-3">
    <form
      class="mt-3 pt-3 mb-4 pb-4 needs-validation"
      novalidate
      method="post"
      action="/explore/new"
      enctype="multipart/form-data"
    >
      <div class="mb-3 col-8">
        <label for="title" class="form-label">Title</label><br />
        <input
          type="text"
          name="explore[title]"
          id="title"
          class="form-control"
          placeholder="Enter title..."
          required
        />
        <div class="valid-feedback">Title Looks good!</div>
        <div class="invalid-feedback">Please Enter Title</div>
      </div>
      <div class="mb-3 col-8">
        <label for="brief" class="form-label">Brief </label><br />
        <input
          type="text"
          name="explore[brief]"
          id="brief"
          class="form-control"
          placeholder="Enter brief about place..."
          required
        />
        <div class="valid-feedback">Brief Looks good!</div>
        <div class="invalid-feedback">Please enter catchy brief.</div>
      </div>

      <div class="mb-3 col-8">
        <label for="description" class="form-label">Description</label><br />
        <textarea
          name="explore[description]"
          id="description"
          class="form-control"
          placeholder="Enter description about place..."
          required
        ></textarea>
        <div class="invalid-feedback">Please enter short description</div>
      </div>
      <div class="mb-3 col-8">
        <label for="image" class="form-label">Images</label><br />
        <div class="images">
          <input
            type="file"
            name="explore[image][url1]"
            class="form-control"
            multiple
            required
          />
          <input
            type="file"
            name="explore[image][url2]"
            class="form-control"
            multiple
            required
          />
          <input
            type="file"
            name="explore[image][url3]"
            id="image"
            class="form-control"
            multiple
            required
          />
          <input
            type="file"
            name="explore[image][url4]"
            multiple
            class="form-control"
            required
          />
          <input
            type="file"
            name="explore[image][url5]"
            multiple
            class="form-control"
            required
          />
        </div>
      </div>

      <div class="mb-3 col-8">
        <label for="info" class="form-label">Info</label><br />
        <textarea
          name="explore[info]"
          id="Info"
          class="form-control"
          placeholder="Enter some info about place..."
          required
        ></textarea>
        <div class="invalid-feedback">Please enter info</div>
      </div>
      <div class="mb-3 col-8">
        <label for="overview" class="form-label">Overview</label><br />

        <textarea
          name="explore[overview]"
          id="overview"
          class="form-control"
          placeholder="Please explain short overview about place..."
          required
        ></textarea>

        <div class="invalid-feedback">Please Enter short overview</div>
      </div>

      <div class="mb-3 col-8">
        <label for="visitTime" class="form-label">Best Time to visit</label
        ><br />
        <textarea
          type="text"
          name="explore[visitTime]"
          id="visitTime"
          class="form-control"
          placeholder="Enter best time to visit..."
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter best time to visit</div>
      </div>
      <div class="mb-3 col-8">
        <label for="famous" class="form-label">Famous for </label><br />
        <textarea
          type="text"
          name="explore[famous]"
          id="famousfor"
          class="form-control"
          placeholder="Place is famous for..."
          required
        ></textarea>
        <div class="invalid-feedback">Please enter details of famous for</div>
      </div>
      <div class="mb-3 col-8">
        <label for="placenear" class="form-label">Some Places Nearby</label
        ><br />

        <label for="place1" class="form-label mt-2"> First Place</label><br />
        <input
          type="text"
          name="explore[place1][title]"
          id="firsttitle"
          class="form-control"
          placeholder="Enter title of place...."
          required
        />
        <br />
        <textarea
          type="text"
          name="explore[place1][description]"
          id="firstdes"
          class="form-control"
          placeholder="Short description about place...."
          required
        ></textarea
        ><br />
        <label for="place1" class="form-label"> Second Place</label><br />
        <input
          type="text"
          name="explore[place2][title]"
          id="secondtitle"
          class="form-control"
          placeholder="Enter title of place...."
          required
        />
        <br /><textarea
          type="text"
          name="explore[place2][description]"
          id="seconddes"
          class="form-control"
          placeholder="Short description about place...."
          required
        ></textarea
        ><br />
        <label for="place1" class="form-label"> Third Place</label><br />
        <input
          type="text"
          name="explore[place3][title]"
          id="thirdtitle"
          class="form-control"
          placeholder="Enter title of place...."
          required
        />
        <br />
        <textarea
          type="text"
          name="explore[place3][description]"
          id="thirddes"
          class="form-control"
          placeholder="Short description about place...."
          required
        ></textarea>
        <div class="invalid-feedback">Please Enter places near by</div>
      </div>
      <div class="mb-3 col-8">
        <label for="location" class="form-label">Location </label><br />
        <input
          type="text"
          name="explore[location]"
          id="location"
          class="form-control"
          placeholder="Enter location..."
          required
        />
        <div class="invalid-feedback">Please enter location</div>
      </div>

      <div class="mb-3 col-8">
        <label for="country" class="form-label">Country</label><br />
        <input
          type="text"
          name="explore[country]"
          id="country"
          class="form-control"
          placeholder="Enter country..."
          required
        />
        <div class="invalid-feedback">Please enter country</div>
      </div>
      <button type="submit" class="btn btn-success">Add new place</button>
    </form>
  </div>
</body>
