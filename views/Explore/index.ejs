<% layout("layouts/boilerplate.ejs") -%>
<body>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1" id="outer">
    <% for(let explore of explores) { %>
    <a href="/explore/<%= explore._id %>" class="imgDiv">
      <div class="card explore-card">
        <img
          src="<%= explore.image.url1 %>"
          class="card-img-top"
          alt="placeImage"
        />
        <div class="card-body">
          <p class="card-text title"><b><%= explore.title %></b></p>
          <p class="card-text"><%= explore.brief %></p>
        </div>
      </div>
    </a>

    <% } %>
  </div>
</body>
